<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- ================ 메인 카드 전체 래퍼 (회색 라운드 테두리) ================ -->
    <LinearLayout
        android:id="@+id/homeCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_button_white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="29dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 로고 영역 -->
        <LinearLayout
            android:id="@+id/headerLogo"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="16dp"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="Capsule 로고"
                android:src="@drawable/logo" />
        </LinearLayout>

        <!-- ================= 복용중 의약품 카드 ================= -->
        <LinearLayout
            android:id="@+id/currentMedWrapper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_button_white"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 타이틀 + ViewPager 자리 -->

            <!-- 약 정보 카드: 기존 medicationSlider 재사용 -->

            <!-- 예시 약 아이콘 자리 (정적 미리보기용) -->
            <!-- 실제 런타임에 ViewPager2 아이템으로 약 이미지 넣을 거라면
                 이 ImageView는 tools:visibility 로만 두고 빌드시엔 없어도 돼 -->
            <!-- ================= 설정 더미 버튼 카드 ================= -->
            <LinearLayout
                android:id="@+id/button_Settings"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="설정 아이콘"
                    android:scaleType="fitCenter"
                    android:src="@drawable/settings" />  <!-- 톱니바퀴 아이콘 넣기 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설정"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <!-- ================= 기능 버튼들 영역 ================= -->

        <!-- 첫 줄: 처방전 인식 / 처방전 조회 -->
        <LinearLayout
            android:id="@+id/rowTopActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 처방전 인식 -->
            <LinearLayout
                android:id="@+id/button_OCR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="처방전 인식"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/btn_prescription_ocr"
                    android:scaleType="fitCenter"
                    android:src="@drawable/recognize" />
            </LinearLayout>

            <!-- 처방전 조회 -->
            <LinearLayout
                android:id="@+id/button_ViewPrescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="처방전 조회"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/btn_prescription_view"
                    android:scaleType="fitCenter"
                    android:src="@drawable/searchhome" />
            </LinearLayout>
        </LinearLayout>

        <!-- 둘째 줄: 챗봇 / 모든 알람 목록 -->
        <LinearLayout
            android:id="@+id/rowMidActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 챗봇 -->
            <LinearLayout
                android:id="@+id/button_ChatBot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="챗봇"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/btn_graph"
                    android:scaleType="fitCenter"
                    android:src="@drawable/genechatbot" />
            </LinearLayout>

            <!-- 모든 알람 목록 -->
            <LinearLayout
                android:id="@+id/button_AllAlarmList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="모든 알람 목록"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/btn_all_alarm_list"
                    android:scaleType="fitCenter"
                    android:src="@drawable/alarmhome" />
            </LinearLayout>
        </LinearLayout>

        <!-- 혈당/혈압 그래프 카드 -->
        <LinearLayout
            android:id="@+id/button_BloodMenu"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/rounded_button_white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="혈당/ 혈압 그래프"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/btn_graph"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/blood" />


        </LinearLayout>

    </LinearLayout>

    <!-- 로딩 오버레이 (id/동작 유지) -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

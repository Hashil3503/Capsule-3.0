<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardBackground"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 의약품 이름 -->
        <TextView
            android:id="@+id/medicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="의약품 이름"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />
        <TextView
            android:id="@+id/viewmedicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="의약품 이름"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 투약량 -->
        <TextView
            android:id="@+id/medicationDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="투약량"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="투약량"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 복용 횟수 -->
        <TextView
            android:id="@+id/medicationFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="복용 횟수"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="복용 횟수"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 성분 -->
        <TextView
            android:id="@+id/medicationIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성분"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성분"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 제형 -->
        <TextView
            android:id="@+id/medicationAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제형"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제형"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 효과 -->
        <TextView
            android:id="@+id/medicationEffects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="효과"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationEffects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="효과"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 주의사항 -->
        <TextView
            android:id="@+id/medicationCaution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주의사항"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationCaution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주의사항"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 메모 -->
        <TextView
            android:id="@+id/medicationMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메모"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메모"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 부작용 -->
        <TextView
            android:id="@+id/medicationSideeffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부작용"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationSideeffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부작용"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 부작용 여부 -->
        <TextView
            android:id="@+id/medicationSe_existence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부작용 여부"
            android:textColor="@color/text_highlight"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/viewmedicationSe_existence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부작용 여부"
            android:textColor="@color/textPrimary"
            android:paddingBottom="5dp" />

        <!-- 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="삭제"
                android:textColor="@color/textPrimary"
                android:background="@drawable/rounded_button" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="수정"
                android:textColor="@color/textPrimary"
                android:background="@drawable/rounded_button" />

            <Button
                android:id="@+id/memoButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="메모"
                android:textColor="@color/textPrimary"
                android:background="@drawable/rounded_button" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
